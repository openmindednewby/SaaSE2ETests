{
  "name": "e2e-tests",
  "version": "1.0.0",
  "description": "Playwright E2E tests for OnlineMenu SaaS microservices",
  "scripts": {
    "test": "cross-env SHELL=/bin/bash playwright test",
    "test:headed": "cross-env SHELL=/bin/bash playwright test --headed",
    "test:debug": "cross-env SHELL=/bin/bash playwright test --debug",
    "test:ui": "cross-env SHELL=/bin/bash playwright test --ui",
    "test:health": "cross-env SHELL=/bin/bash playwright test tests/health --project=health",
    "test:diagnostics": "cross-env SHELL=/bin/bash playwright test tests/diagnostics --project=diagnostics-chromium --project=diagnostics-mobile --project=diagnostics-firefox",
    "test:identity": "cross-env SHELL=/bin/bash playwright test tests/identity --project=identity-chromium --project=identity-mobile --project=identity-firefox",
    "test:identity:chromium": "cross-env SHELL=/bin/bash playwright test tests/identity --project=identity-chromium",
    "test:identity:chromium:headed": "cross-env SHELL=/bin/bash playwright test --headed tests/identity --project=identity-chromium",
    "test:identity:mobile": "cross-env SHELL=/bin/bash playwright test tests/identity --project=identity-mobile",
    "test:identity:mobile:headed": "cross-env SHELL=/bin/bash playwright test --headed tests/identity --project=identity-mobile",
    "test:identity:firefox": "cross-env SHELL=/bin/bash playwright test tests/identity --project=identity-firefox",
    "test:questioner": "cross-env SHELL=/bin/bash playwright test tests/questioner --project=questioner-chromium --project=questioner-mobile --project=questioner-firefox",
    "test:questioner:chromium": "cross-env SHELL=/bin/bash playwright test tests/questioner --project=questioner-chromium",
    "test:questioner:chromium:headed": "cross-env SHELL=/bin/bash playwright test --headed tests/questioner --project=questioner-chromium",
    "test:questioner:mobile": "cross-env SHELL=/bin/bash playwright test tests/questioner --project=questioner-mobile",
    "test:questioner:firefox": "cross-env SHELL=/bin/bash playwright test tests/questioner --project=questioner-firefox",
    "test:questioner:templates": "cross-env SHELL=/bin/bash playwright test tests/questioner/templates --project=questioner-chromium --project=questioner-mobile --project=questioner-firefox",
    "test:questioner:templates:chromium": "cross-env SHELL=/bin/bash playwright test tests/questioner/templates --project=questioner-chromium",
    "test:questioner:templates:chromium:headed": "cross-env SHELL=/bin/bash playwright test --headed tests/questioner/templates --project=questioner-chromium",
    "test:questioner:templates:mobile": "cross-env SHELL=/bin/bash playwright test tests/questioner/templates --project=questioner-mobile",
    "test:questioner:templates:firefox": "cross-env SHELL=/bin/bash playwright test tests/questioner/templates --project=questioner-firefox",
    "test:questioner:quiz": "cross-env SHELL=/bin/bash playwright test tests/questioner/quiz-active tests/questioner/quiz-answers --project=questioner-chromium --project=questioner-mobile --project=questioner-firefox",
    "test:questioner:quiz:chromium": "cross-env SHELL=/bin/bash playwright test tests/questioner/quiz-active tests/questioner/quiz-answers --project=questioner-chromium",
    "test:questioner:quiz:mobile": "cross-env SHELL=/bin/bash playwright test tests/questioner/quiz-active tests/questioner/quiz-answers --project=questioner-mobile",
    "test:questioner:quiz:firefox": "cross-env SHELL=/bin/bash playwright test tests/questioner/quiz-active tests/questioner/quiz-answers --project=questioner-firefox",
    "test:online-menus": "cross-env SHELL=/bin/bash playwright test tests/online-menus --project=online-menus-chromium --project=online-menus-mobile --project=online-menus-firefox",
    "test:online-menus:chromium": "cross-env SHELL=/bin/bash playwright test tests/online-menus --project=online-menus-chromium",
    "test:online-menus:chromium:headed": "cross-env SHELL=/bin/bash playwright test --headed tests/online-menus --project=online-menus-chromium",
    "test:online-menus:mobile": "cross-env SHELL=/bin/bash playwright test tests/online-menus --project=online-menus-mobile",
    "test:online-menus:firefox": "cross-env SHELL=/bin/bash playwright test tests/online-menus --project=online-menus-firefox",
    "test:content": "cross-env SHELL=/bin/bash playwright test tests/content --project=content-chromium --project=content-mobile --project=content-firefox",
    "test:content:chromium": "cross-env SHELL=/bin/bash playwright test tests/content --project=content-chromium",
    "test:content:chromium:headed": "cross-env SHELL=/bin/bash playwright test --headed tests/content --project=content-chromium",
    "test:content:mobile": "cross-env SHELL=/bin/bash playwright test tests/content --project=content-mobile",
    "test:content:firefox": "cross-env SHELL=/bin/bash playwright test tests/content --project=content-firefox",
    "test:notification": "cross-env SHELL=/bin/bash playwright test tests/notifications --project=notifications-chromium --project=notifications-mobile --project=notifications-firefox",
    "test:notifications": "npm run test:notification --",
    "test:notification:chromium": "cross-env SHELL=/bin/bash playwright test tests/notifications --project=notifications-chromium",
    "test:notification:chromium:headed": "cross-env SHELL=/bin/bash playwright test --headed tests/notifications --project=notifications-chromium",
    "test:notification:mobile": "cross-env SHELL=/bin/bash playwright test tests/notifications --project=notifications-mobile",
    "test:notification:firefox": "cross-env SHELL=/bin/bash playwright test tests/notifications --project=notifications-firefox",
    "test:smoke": "cross-env SHELL=/bin/bash playwright test tests/smoke --project=smoke-chromium --project=smoke-mobile --project=smoke-firefox",
    "report": "playwright show-report reports/html",
    "codegen": "playwright codegen localhost:8082",
    "tilt:health": "node scripts/tilt-e2e.mjs playwright-e2e-health",
    "tilt:identity": "node scripts/tilt-e2e.mjs playwright-e2e-identity-all",
    "tilt:questioner": "node scripts/tilt-e2e.mjs playwright-e2e-questioner-all",
    "tilt:questioner:templates": "node scripts/tilt-e2e.mjs playwright-e2e-questioner-templates-all",
    "tilt:questioner:quiz": "node scripts/tilt-e2e.mjs playwright-e2e-questioner-quiz-all",
    "tilt:online-menus": "node scripts/tilt-e2e.mjs playwright-e2e-online-menus-all",
    "tilt:content": "node scripts/tilt-e2e.mjs playwright-e2e-content-all",
    "tilt:notification": "node scripts/tilt-e2e.mjs playwright-e2e-notification-all",
    "tilt:theme-studio": "node scripts/tilt-e2e.mjs theme-studio-e2e --port 10351"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "@types/node": "^22.0.0",
    "axios": "^1.7.0",
    "cross-env": "^10.1.0",
    "dotenv": "^16.4.0",
    "typescript": "^5.6.0"
  }
}
