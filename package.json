{
  "name": "e2e-tests",
  "version": "1.0.0",
  "description": "Playwright E2E tests for OnlineMenu SaaS microservices",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:health": "playwright test tests/health --project=health",
    "test:diagnostics": "playwright test tests/diagnostics --project=diagnostics-chromium --project=diagnostics-mobile --project=diagnostics-firefox",
    "test:identity": "playwright test tests/identity --project=identity-chromium --project=identity-mobile --project=identity-firefox",
    "test:identity:chromium": "playwright test tests/identity --project=identity-chromium",
    "test:identity:mobile": "playwright test tests/identity --project=identity-mobile",
    "test:identity:firefox": "playwright test tests/identity --project=identity-firefox",
    "test:questioner": "playwright test tests/questioner --project=questioner-chromium --project=questioner-mobile --project=questioner-firefox",
    "test:questioner:chromium": "playwright test tests/questioner --project=questioner-chromium",
    "test:questioner:mobile": "playwright test tests/questioner --project=questioner-mobile",
    "test:questioner:firefox": "playwright test tests/questioner --project=questioner-firefox",
    "test:questioner:templates": "playwright test tests/questioner/templates --project=questioner-chromium --project=questioner-mobile --project=questioner-firefox",
    "test:questioner:templates:chromium": "playwright test tests/questioner/templates --project=questioner-chromium",
    "test:questioner:templates:mobile": "playwright test tests/questioner/templates --project=questioner-mobile",
    "test:questioner:templates:firefox": "playwright test tests/questioner/templates --project=questioner-firefox",
    "test:questioner:quiz:chromium": "playwright test tests/questioner/quiz-active tests/questioner/quiz-answers --project=questioner-chromium",
    "test:questioner:quiz:mobile": "playwright test tests/questioner/quiz-active tests/questioner/quiz-answers --project=questioner-mobile",
    "test:questioner:quiz:firefox": "playwright test tests/questioner/quiz-active tests/questioner/quiz-answers --project=questioner-firefox",
    "test:questioner:quiz": "playwright test tests/questioner/quiz-active tests/questioner/quiz-answers --project=questioner-chromium --project=questioner-mobile --project=questioner-firefox",
    "test:smoke": "playwright test tests/smoke --project=smoke-chromium --project=smoke-mobile --project=smoke-firefox",
    "docker:up": "docker compose -f ../docker-compose.e2e.yml up -d --build",
    "docker:down": "docker compose -f ../docker-compose.e2e.yml down",
    "docker:test": "docker compose -f ../docker-compose.e2e.yml up --build --abort-on-container-exit playwright",
    "docker:logs": "docker compose -f ../docker-compose.e2e.yml logs -f",
    "report": "playwright show-report reports/html",
    "codegen": "playwright codegen localhost:8082"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "@types/node": "^22.0.0",
    "axios": "^1.7.0",
    "dotenv": "^16.4.0",
    "typescript": "^5.6.0"
  }
}
